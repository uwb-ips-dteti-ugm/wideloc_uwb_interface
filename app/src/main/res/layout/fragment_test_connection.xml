<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.connect_via_wifi.TestConnectionFragment"
    android:background="@color/background_default"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextViewFragmentTestConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/test_connection"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"
        android:textColor="@color/text_default"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:id="@+id/mapViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/map_dummy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/device_tag"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipButtonDeviceDetailBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/forgetDeviceButtonDeviceDetailBottomSheet"
        android:backgroundTint="@color/background_default"
        app:cornerRadius="64dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:strokeColor="@color/border_secondary"
        app:strokeWidth="2dp"
        android:text="@string/skip"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/text_secondary"
        android:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recalibrateButtonDeviceDetailBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/forgetDeviceButtonDeviceDetailBottomSheet"
        android:backgroundTint="@color/background_default"
        app:cornerRadius="64dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="2dp"
        android:text="@string/recalibrate"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/text_primary"
        android:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/correctButtonFragmentTestConnection"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/background_primary"
        android:fontFamily="@font/roboto_semibold"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/correct"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="64dp"
        app:iconGravity="textEnd"
        app:iconSize="16dp"
        />

</LinearLayout>